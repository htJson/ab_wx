<!--pages/study/study.wxml-->
<view class="container">
  <view class="noData" wx:if="{{trainNoData}}">
    <image src="../../images/noData.jpg"></image>
    <text>暂无数据</text>
  </view>
  <view>
    <view class="loading" wx:if="{{trainLoading}}">
      <image src="../../images/loading.gif"></image>
    </view>
    <view class="item" wx:for="{{trainList}}">
      <image src="{{item.course.path}}"></image>
      <view class="f34">
        {{item.courseTeam.team_name}} 
        <text class="f18 {{item.course.train_way?'borderBlue':'borderYellow'}}">{{item.courseTeam.train_way?"在线":"面授"}}</text>
      </view>
      <view class="f24"> <image src="../../images/hour.png" class="iconImg"></image> {{item.courseTeam.team_hour}}课时</view>
      <view class="f24"> <image src="../../images/credit.png" class="iconImg"></image> {{item.courseTeam.team_credit}}学分</view>
      <view class="f24"> <image src="../../images/exam.png" class="iconImg"></image>课时成绩 <text class="f38">{{item.examApplys[0].score}}</text>分</view>
      <view class="">
      </view>
      <text class="qualified {{item.planStudent.passed?'bg1':'bg2'}}">{{item.planStudent.passed?'合格':'不合格'}}</text>
    </view>
  </view>
</view>
