/**index.wxss**/
.userinfo{background:#fff; padding:30rpx 30rpx;}
.userinfo image{width:35rpx; height:35rpx; float:right; margin-top:8rpx;}
.abList{background:#fff;}
.item{padding:0 30rpx 30rpx ; background:#fff;overflow:hidden;}
.item view{padding-bottom:14rpx;overflow: hidden;}
.item image{width:240rpx; height:240rpx; float:left; margin-right:30rpx;}
.item .cType{font-size:14rpx; margin-top:13rpx; margin-left:10rpx; border-radius:20rpx; padding:3rpx 8rpx; float:left;}
.item .iconImg{width:15px; height:15px;}
.courseBox{background:#fff; padding-bottom:20rpx;position:relative;}
.cItem{padding:0 30rpx 20rpx; position:relative; overflow:hidden;}
.cItem .courseLeft{position:absolute; top:0px; bottom:0px; width:20rpx;overflow: hidden;}
.cItem .courseLeft .radioBox{width:1rpx; height:100%; margin-left:10rpx; background:#ededed}
.cItem .courseLeft .line{background:#a6a6a7; width:20rpx; height:20rpx; border-radius:10rpx; position:absolute; top:35%;}
.cItem .courseRight{border:1rpx solid #ededed; position:relative; margin-left:70rpx;font-size:24rpx; padding:15rpx 20rpx;}
.cItem .courseRight .leftSj{width:15px;height:20px; position:absolute; left:-12px; top:22px; }
.cItem .courseRight .cTime{padding-bottom:10rpx;}
.cContent{overflow: hidden; line-height: 35rpx}
.courLeftItem{float:left; width:49%}
.courRightItem{float:right; width:49%}
.cItemActive .courseLeft .line{background:#0f8af4}
.cItemActive .courseRight {border:2px solid #0f8af4}
