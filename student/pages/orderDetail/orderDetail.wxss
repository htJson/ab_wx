/* pages/orderDetail/orderDetail.wxss */
.container{padding:0 30rpx; background: #fff;}

.product{overflow: hidden;padding:30rpx 0;border-bottom:1px solid #c7c7cc}
.product .logo{width:160rpx; height: 160rpx; float:left}
.product .productContent{ margin-left:180rpx; position: relative;}
.productContent text{display: block; font-size:30rpx;}
.productContent .title{color:#000; font-size:36rpx; padding:10rpx 0}
.productContent .phoneIcon{position: absolute; right:30px; top:20px; width:45rpx;height: 45rpx;}



.serverNews{padding-top:30rpx;}
.serverNews .item{ overflow: hidden; font-size: 28rpx; padding:15rpx 0px;}
.serverNews .item .title{color:#727171; float: left; width:150rpx;}
.serverNews .item .content{margin-left:150rpx; text-align: left;}


.noteTitle{font-size:32rpx; color:#000; border-top:1px solid #c7c7cc; margin-top:20rpx; padding:30rpx 0 20rpx;}
.noteTitle .tips{color:#f00; font-size:20rpx;}

.noteRadio{ overflow: hidden;}
.noteRadio view{float:left; font-size:28rpx; margin-right:20rpx}
.noteRadio view image{width:35rpx; height: 35rpx; float:left; margin-right:10rpx;}

.noteText{height: 250rpx; width:100%; background:#efeff4; margin-top:20rpx;}
.statusBtn{background:#00a0e9; height: 100rpx; line-height: 100rpx; border-radius:0px; border:0; color:#fff; position: fixed; bottom:0px;width:100%; left:0px;}

