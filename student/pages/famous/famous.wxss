.item .server .serverItem{font-size:26rpx;  text-align: center; color:#000; display:block; float:left; height:48rpx; line-height:48rpx; border-radius:10rpx; margin-right:45rpx; border:1px solid #727171; margin-top:29rpx;}
.item .server .sixSmall{width:201rpx;}
.item .server .sixMore{width:446rpx;}
.aline{height: 21rpx; background:#f0eff5}

.userCard,.healthy,.skill{padding:0 0rpx 40rpx 30rpx;}
.userCard .title,.healthy .title,.skill .title{padding:30rpx 0; border-bottom:1px solid #e5e5e5; }

.skill{ padding-bottom:40rpx;}

.cardImg{width:200rpx; height: 200rpx; overflow: hidden; display:block; float:left; margin-top:40rpx; margin-right:40rpx;}
.cardImg image{width:100%; height: 100%;}


