.aline{height: 21rpx; background:#f0eff5}
.userCard,.healthy,.skill{padding:0 0rpx 40rpx 30rpx;}
.userCard .title,.healthy .title,.skill .title{padding:20rpx 0 10rpx; border-bottom:1px solid #e5e5e5; color:#333; margin-bottom:10rpx}
.skill{ padding-bottom:40rpx;}
.cardImg{width:220rpx; height: 220rpx; overflow: hidden; display:block; float:left; margin-top:16rpx; margin-right:16rpx;}
