.container{background:#fff;}
.userNews{background:#0f8af4; color:#fff; text-align: center; padding-bottom:64rpx;}

.userNews .userImg{width:243rpx; height: 290rpx; margin:25rpx auto 43rpx; overflow: hidden; border-radius:10rpx; background:#ffffff; }
.userNews .userImg image{width:100%; height: 100%;}
.userNews .userName{font-size:37rpx; line-height: 37rpx;}
.userNews .userNumber{font-size:30rpx; line-height: 30rpx; margin-top:39rpx;}

.item{overflow:hidden; padding:0 0rpx 38rpx 30rpx;} 
