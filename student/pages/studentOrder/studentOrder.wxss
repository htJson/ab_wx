/* pages/order/order.wxss */
.tab{border-bottom:1px solid #dadadd;height: 83rpx;  position: fixed; width: 100%; background: #fff; z-index: 10;}
.tab text{ font-size:30rpx; width:20%; display: inline-block; text-align: center; padding:0rpx 0px;position: relative;}
.tab .active{border-bottom:3px solid #00a0e9; height: 77rpx; line-height: 77rpx;}
.list{background:#efeff4; padding-top:82rpx;}
.item{ margin-bottom:20rpx; padding-bottom:20rpx; background: #fff;}
.item .header {padding:24rpx 30rpx 21rpx 30rpx; font-size:26rpx; border-bottom:1px solid #ededed}
/*待付款  */
.item .header .orderType{color:#ff4e00;  }
/*待服务  */
.item .header .orderServiece{color:#ffae00; }
/*待确认 */
.item .header .orderOK{color:#09bb07;}
/* 已取消 已完成  #727171  */
.item .header .orderAsh{color:#727171;}

.item .header .orderNum{color:#727171; font-size:26rpx;margin-left:20rpx;}
.item .content{overflow: hidden; padding-top:25rpx; padding-left:30rpx;}
.item .content image{width:180rpx; height: 180rpx; display: block; float:left;}
.item .content .orderNews{margin-left:203rpx; position:relative; padding-right:60rpx; height: 180rpx}
.item .content .orderNews .more{position:absolute; right:30rpx; top:30rpx; width:25rpx; height:25rpx}
.item .content .name{font-size:34rpx; line-height: 35rpx;}
.item .content .time{font-size:26rpx; color:#727171;overflow: hidden; margin:10rpx 0 25rpx;}
.item .content .price{font-size:36rpx; color:#f00; position: absolute; bottom:0px;}
.item .footer{overflow: hidden; text-align: right; padding-right:30rpx; margin-top:23rpx;}
.item .footer .ashBtn{border:1px solid #727171; border-radius:0px; font-size:26rpx; display: inline-block; background: #fff; margin-left:30rpx; }
.item .footer .blueBtn{background: #00a0e9; border:1px solid #00a0e9; border-radius:0px; font-size:26rpx; display: inline-block; margin-left:30rpx;color:#fff}
