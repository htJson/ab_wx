/* pages/skuDetail/skuDetail.wxss */
@import "../../wxParse/wxParse.wxss";
.container{background:#efeff4; padding-bottom:100rpx;}
.skuImg{width:100%; height:750rpx;overflow: hidden; display: block;}
.head{background: #fff; overflow: hidden; padding:30rpx; position: relative;}
.head .title{font-size:40rpx; color:#010000;}
.head .order{position: absolute; right:30rpx; bottom:30rpx; color:#b7bbc1; font-size:24rpx;}
.skuNote{background: #fff; padding:0 30rpx 30rpx; color:#727171; font-size:26rpx; border-bottom:1px solid #c7c7cc}
.skuService{overflow: hidden; background: #fff; padding:30rpx; }
.skuService text{font-size:30rpx; color:#000; float:left;}
.skuService .selecteItem{float:right; color:#999; margin-right:30rpx;}
.skuService image{ float:right; width:20rpx; height: 23rpx; margin-top:3px;}
.skuStandard,.skuflow,.skuTip{overflow: hidden; background: #fff; padding:30rpx; margin-top:22rpx}
.skuStandard .title,.skuflow .title,.skuTip .title{font-size:40rpx; color:#727171; border-bottom:1px solid #c7c7cc; padding-bottom:30rpx;}
.skuStandard .item,.skuTip .item{color:#727171; font-size:26rpx;position: relative; padding-left:30rpx;margin-top:20rpx;}
.skuStandard .item .dot,.skuTip .item .dot{background:#00a0e9; width:10rpx; height: 10rpx; border-radius:50%; position:absolute; left:0rpx; top:50%; margin-top:-5rpx;}
.skuflow .flowBox{overflow: hidden;}
.skuflow .flowItem{text-align: center; width:50%; display: inline-block; margin-top:38rpx;}
.skuflow .flowItem image{width:250rpx; height: 250rpx; display: block; margin:0 auto}
.skuflow .flowItem text{padding-top:30rpx; display: block;}
.skuTip{padding-bottom:130rpx;}
.btn_Price{width:100%; height: 100rpx; background:#fff; position:fixed; bottom:0px; border-top:1px solid #c7c7cc; overflow: hidden;}
.btn_Price .myPrice{float:left; color:#00a0e9; font-size:70rpx; padding-left:30rpx;}
.btn_Price .myPrice text{ color:#00a0e9; font-size:34rpx;}
.btn_Price .marketPrice{color:#b7bbc1; font-size:24rpx; float:left; margin:40rpx 0 0 30rpx;}
.btn_Price .marketPrice text{text-decoration: line-through;}
.btn_Price .submit{background:#00a0e9; border:none; color:#fff; height: 100rpx; line-height: 100rpx; font-size:34rpx; float:right; border-radius: 0px; width:50%;}
.sheetTitle{color:#000; padding:38rpx 30rpx;}
.cancel{height: 200rpx; background:#00a0e9; color:#fff; margin:0px; padding:0px;}

.dItem{ margin-left:25rpx; text-align: center; overflow: hidden; border:1px solid #cccccc; display:block; margin-bottom:30rpx; width:335rpx; height:150rpx; border-radius:10rpx; float:left;}
.dItem .type{color:#727171; font-size:24rpx; height: 60rpx; display: block; border-bottom:1px solid #cccccc; padding:20rpx; line-height: 30rpx; padding-top:0px;}
.dItem .txt{color:#727171; font-size:36rpx; padding:20rpx}
.active{border:1px solid #00a0e9; background: none;}
.active .type{border-bottom:1px solid #00a0e9}
.active .txt{color:#ff4600}
.skuBtn{height: 100rpx; background:#00a0e9; color:#fff; margin:0px; padding:0px; position: fixed; width:100%; bottom:0px; left:0px;}

.typeNoData{padding-bottom:50rpx; padding-top:0px;}
.typeNoData image{width:220rpx; height:170rpx;}
.typeNoData text{font-size:30rpx;}
.skuError{color:#f00; text-align: center; font-size:26rpx;padding:5rpx 0; position: absolute; top:73rpx; left:0px; width:100%;}