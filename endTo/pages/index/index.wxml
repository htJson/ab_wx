<!--index.wxml-->
<import src="../../templates/msglist.wxml"/>
<view class="container">
  <view class="banner">
    <swiper class="" autoplay="true" interval="3000" duration="500" circular="true" >
      <block wx:for="{{imgUrls}}" wx:key="{{index}}" wx:key="{{index}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" width="355" height="150"/>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class="assort">
    <view class="ass_item" wx:for="{{assort}}" wx:key="{{index}}" data-id="{{item.id}}">
      <image src="{{item.image}}"  mode="aspectFill"></image>
      <text>{{item.title}}</text>
    </view>
  </view>

  <view class="assList">
    <view class="loading" wx:if="{{isLoading}}">
      <image src="../../images/loading.gif"></image>
    </view>
    <view class="noData" wx:if="{{noData}}">
      <image src="../../images/noData.jpg"></image>
      <text>暂无数据</text>
    </view>
    <view wx:else>
      <block wx:for="{{skuList}}">
        <!-- <template is="msgList" data="{{item}}"/> -->
        <template is="msgItem" data="{{item,index}}"/>
      </block>
    </view>
    
  </view>
</view>
